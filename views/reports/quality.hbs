<div class="row">
	<div class="col s12 m12">
		<div class="card white">
			<div class="card-content blue-text center-align">
				<span class="card-title blue-text center-align">New Quality Report</span>
				<div class="row center-align">
					<form action="/reports/:id/quality" method="POST">
						<input type="hidden" name="_csrf" value="{{_csrf}}">
						<input type="hidden" name="report" value="{{report}}">
						<div class="row left-align">
							<div class="input-field col s12">
								<input id="virusppm" name="virusppm" type="number" class="validate">
								<label for="virusppm">Virus PPM</label>
							</div>
							<div class="input-field col s12">
								<input id="contaminantppm" name="contaminantppm" type="number" class="validate">
								<label for="contaminantppm">Contaminant PPM</label>
							</div>
							<div style="padding: 0 10px;">
								<label>Browser Select</label>
							</div>
							<div class="input-field col s12">
								<select class="browser-default" name="condition">
									<option value="" disabled selected>Choose Water Condition</option>
									<option value="Clean">Clean</option>
									<option value="Treatable-Clear">Treatable-Clear</option>
									<option value="Treatable-Muddy">Treatable-Muddy</option>
									<option value="Waste">Waste</option>
								</select>
							</div>
						</div>
						<div class="input-field col s12 center-align">
							<button type="submit" class="btn blue">Submit</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>