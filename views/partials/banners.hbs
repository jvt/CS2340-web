{{#if messages.success}}
<div class="container flash-message success success-notification" style="margin-top:50px;">
	<div class="row">
		<div class="col s12 m12">
			<div class="card green lighten-1">
				<div class="card-content white-text">
					<span class="card-title"><i class="fa fa-check-circle white-text" style="position:relative;top:3px;"></i></span>
					{{ messages.success }}
				</div>
			</div>
		</div>
	</div>
</div>
{{/if}}
{{#if messages.error}}
<div class="container error-notification" style="margin-top:50px;">
	<div class="row">
		<div class="col s12 m12">
			<div class="card red lighten-1">
				<div class="card-content white-text">
					<span class="card-title"><i class="fa fa-exclamation-circle white-text" style="position:relative;top:3px;"></i></span>
					{{ messages.error }}
				</div>
			</div>
		</div>
	</div>
</div>
{{/if}}