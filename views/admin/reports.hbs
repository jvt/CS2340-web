<div class="row">
	<div class="col s12">
		<div class="card white">
			<div class="card-content">
				<span class="card-title grey-text text-darken-3">All Reports ({{ reports.length }})</span>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col s12">
		<div class="card white">
			<div class="card-content">
				{{#if reports}}
				<ul class="collection">
					{{#reports}}
					<a href="/admin/reports/{{ this.attributes.id }}/" title="View Report" class="collection-item blue-text"><span class="grey-text">#{{ this.attributes.id }}:</span> {{ this.attributes.latitude }}, {{ this.attributes.longitude }}</a>
					{{/reports}}
				</ul>
				{{else}}
				<p class="text-darken-3 center-align">There are no water reports</p>
				{{/if}}
			</div>
		</div>
	</div>
</div>