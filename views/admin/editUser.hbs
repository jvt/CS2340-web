<div class="row">
	<div class="col s12">
		<div class="card white">
			<div class="card-content">
				<span class="card-title grey-text text-darken-3">User: <b>{{ data.attributes.username }}</b></span>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col s12">
		<div class="card white">
			<div class="card-content">
				<form action="/admin/users/{{ data.attributes.id }}/edit" method="POST">
					<input type="hidden" name="_csrf" value="{{_csrf}}">
					<div class="row">
						<div class="input-field col s12">
							<input id="username" name="username" type="text" value="{{ data.attributes.username }}" class="validate">
							<label for="username">Username</label>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<input id="homeaddress" name="homeaddress" type="text" value="{{ data.attributes.homeaddress }}" class="validate">
							<label for="homeaddress">Home Address</label>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<input id="title" name="title" type="text" value="{{ data.attributes.title }}" class="validate">
							<label for="title">Title</label>
						</div>
					</div>
					<div class="row" style="padding: 0 10px;">
						<label>Role</label>
						<select name="role" class="browser-default">
							<option value="" disabled>Select an Option</option>
							<option value="0" {{#if roles.[0]}}selected{{/if}}>User</option>
							<option value="1" {{#if roles.[1]}}selected{{/if}}>Worker</option>
							<option value="2" {{#if roles.[2]}}selected{{/if}}>Manager</option>
							<option value="3" {{#if roles.[3]}}selected{{/if}}>Admin</option>
						</select>
					</div>
					<div class="row center-align">
						<button class="btn blue submit" type="submit">Save</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
